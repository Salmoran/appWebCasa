@using ClaseCasa.Models

@model ClaseCasa.Models.CuartoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CuartoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTipoCuarto">IdTipoCuarto</label>
                <select asp-for="IdTipoCuarto" class="form-control" asp-items="new SelectList(ViewBag.TipoCuarto,nameof(TipoCuartoModel.IdTipoCuarto),nameof(TipoCuartoModel.Descripcion))" required>
                    <option value="">Seleccione un Tipo de Cuarto...</option>
                </select>
                <span asp-validation-for="IdTipoCuarto" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input type="color" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WcPropio" /> @Html.DisplayNameFor(model => model.WcPropio)
                </label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Medida" class="control-label"></label>
                <input asp-for="Medida" type="number" class="form-control"/>
                <span asp-validation-for="Medida" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Lista de Cuartos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
